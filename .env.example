# LinkedIn Configuration
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password
LINKEDIN_PAGES=https://www.linkedin.com/company/example-company/,https://www.linkedin.com/in/example-person/

# Instagram Configuration
INSTAGRAM_USERNAME=your-username
INSTAGRAM_PASSWORD=your-password
INSTAGRAM_ACCOUNTS=https://www.instagram.com/account1/,https://www.instagram.com/account2/

# General Configuration
# Check interval in minutes (only used if RUN_ONCE=false, default: 60)
CHECK_INTERVAL_MINUTES=60

# Browser mode: true for headless (background), false to see browser window (default: false)
HEADLESS=false

# Run mode: true to run once and exit (for cron), false to run continuously (default: false)
RUN_ONCE=false

# CSV log file path for both LinkedIn and Instagram (default: ./bot-results.csv)
CSV_LOG_PATH=./bot-results.csv
