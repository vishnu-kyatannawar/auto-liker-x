{
  "name": "linkedin-posts-liker",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:instagram": "tsx src/index-instagram.ts",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:instagram": "tsx watch src/index-instagram.ts",
    "install-browser": "npx playwright install chromium",
    "build:appimage:linkedin": "bash build-linkedin-appimage.sh",
    "build:appimage:instagram": "bash build-instagram-appimage.sh",
    "build:appimage:all": "bash build-linkedin-appimage.sh && bash build-instagram-appimage.sh"
  },
  "keywords": ["linkedin", "instagram", "automation", "playwright", "likes"],
  "author": "",
  "license": "ISC",
  "description": "Automated LinkedIn and Instagram post liker - monitors pages and likes new posts",
  "devDependencies": {
    "@types/node": "^24.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "playwright": "^1.56.1"
  }
}
